     description="" enabled="True"
     friendlyName="Author"
     i18n:attributes="description;friendlyName" />
  <metadata name="genre"
     description="" enabled="True"
     friendlyName="News Type"
     i18n:attributes="description;friendlyName" />
  <metadata name="section"
     description="Named section where the article appears" enabled="True"
     friendlyName="Section"
     i18n:attributes="description;friendlyName" />
  <metadata name="urgency"
     description="News importance" enabled="True"
     friendlyName="Urgency"
     i18n:attributes="description;friendlyName" />
 </topic_metadata>
</atcttool>
