<?xml version="1.0"?>
<atcttool xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <!-- there's a bug here on when having i18n:domain="plone" above; anyway, we
      need to added it before we run i18ndude to update the translations
      https://bugs.launchpad.net/zope-cmf/+bug/939741 -->
 <topic_indexes>
  <index name="subtitle" description="Subordinate headline of the article"
     enabled="False" friendlyName="Subtitle"
     i18n:attributes="description;friendlyName">
   <criteria>ATSimpleStringCriterion</criteria>
  </index>
  <index name="byline" description=""
     enabled="True" friendlyName="Author"
     i18n:attributes="description;friendlyName">
   <criteria>ATSimpleStringCriterion</criteria>
  </index>
  <index name="genre" description=""
     enabled="True" friendlyName="News Type"
     i18n:attributes="description;friendlyName">
   <criteria>ATListCriterion</criteria>
   <criteria>ATSelectionCriterion</criteria>
   <criteria>ATSimpleStringCriterion</criteria>
  </index>
  <index name="section" description="Named section where the article appears"
     enabled="True" friendlyName="Section"
     i18n:attributes="description;friendlyName">
   <criteria>ATListCriterion</criteria>
   <criteria>ATSelectionCriterion</criteria>
   <criteria>ATSimpleStringCriterion</criteria>
  </index>
  <index name="urgency" description="News importance"
     enabled="True" friendlyName="Urgency"
     i18n:attributes="description;friendlyName">
   <criteria>ATSimpleIntCriterion</criteria>
   <criteria>ATListCriterion</criteria>
   <criteria>ATSelectionCriterion</criteria>
   <criteria>ATSimpleStringCriterion</criteria>
  </index>
 </topic_indexes>
 <topic_metadata>
  <metadata name="subtitle"
     description="Subordinate headline of the article" enabled="False"
     friendlyName="Subtitle"
     i18n:attributes="description;friendlyName" />
