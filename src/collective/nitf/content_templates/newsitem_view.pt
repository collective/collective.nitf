<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.nitf">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading" tal:content="context/title" />

        <h2 class="" tal:content="context/subtitle" />

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <p class="documentDescription" tal:content="context/description" />

        <p class="nitfByline" tal:condition="context/byline|nothing">
            <span i18n:translate="">By</span>
            <span tal:content="context/byline" />
        </p>

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div class="newsImageContainer" tal:condition="view/image|nothing"
             tal:define="image view/image">
            <a href="#mediabox" id="parent-fieldname-image">
               <img class="newsImage nitf" src="" alt=""
                    tal:attributes="src string:${image/image_url}/image_mini;
                                    alt image/title" />
            </a>
            <p class="discreet" tal:condition="image/description|nothing"
               tal:content="image/description">
                Image Caption
            </p>
        </div>

        <div class="newsview">
            <div id="mediabox" metal:use-macro="context/media_view/macros/media-box">
                <metal:navi fill-slot="navi">
                    <metal:buttons use-macro="context/media_view/macros/navi" />
                </metal:navi>
            </div>
        </div>

        <div metal:define-macro="text-field-view" id="parent-fieldname-text" class="stx">
            <div metal:define-slot="inside" tal:replace="structure context/text/output">The body</div>
        </div>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>
