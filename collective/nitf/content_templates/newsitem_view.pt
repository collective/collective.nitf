<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:content-core fill-slot="content-core">
    <metal:block define-macro="content-core"
            tal:define="here_url context/@@plone_context_state/object_url;
                      kssClassesView context/@@kss_field_decorator_view;
                      getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                      text context/body;">

        <div class="newsImageContainer"
             tal:condition="view/image|nothing"
               tal:define="img_brain view/image">
            <!--a href="#"
               tal:attributes="href string:${img_brain/image_url}/image_view_fullscreen"
               id="parent-fieldname-image"-->
            <a href="#mediabox"
               id="parent-fieldname-image">
               <img class="newsImage nitf" tal:attributes="src string:${img_brain/image_url}/image_mini" src="" alt="" />
            </a>
            <!--/a-->
           <p class="discreet" tal:condition="img_brain/title|nothing" tal:content="img_brain/title">
              Image Caption
            </p>
        </div>
        <div id="mediabox" metal:use-macro="context/media_view/macros/media-box" tal:define="here_url context/@@plone_context_state/object_url;"
                              tal:attributes="class string:previews">
        </div>
  
        <div metal:define-macro="text-field-view"
            id="parent-fieldname-text" class="stx">
            <div metal:define-slot="inside" tal:replace="structure context/body/output">The body</div>
        </div>
    </metal:block>
</metal:content-core>

</body>
</html>

