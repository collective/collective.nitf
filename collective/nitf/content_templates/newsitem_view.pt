<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.nitf">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
        tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading" tal:content="context/title" />

        <h2 class="" tal:content="context/subtitle" />

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <p class="documentDescription" tal:content="context/description" />

        <p class="">
            <span i18n:translate="">By</span>
            <span tal:content="context/byline" />
        </p>

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div class="newsImageContainer"
             tal:condition="view/image|nothing"
               tal:define="img_brain view/image">
            <!--a href="#"
               tal:attributes="href string:${img_brain/image_url}/image_view_fullscreen"
               id="parent-fieldname-image"-->
            <a href="#mediabox"
               id="parent-fieldname-image">
               <img class="newsImage nitf"
                    src="" alt=""
                    tal:attributes="src string:${img_brain/image_url}/image_mini" />
            </a>
            <!--/a-->
           <p class="discreet" tal:condition="img_brain/title|nothing" tal:content="img_brain/title">
              Image Caption
            </p>
        </div>

        <div class="newsview">
            <div id="mediabox"
                 metal:use-macro="context/media_view/macros/media-box"
                 tal:define="here_url context/@@plone_context_state/object_url;"
                 tal:attributes="class string:previews">
                <metal:navi fill-slot="navi">
                    <metal:buttons use-macro="context/media_view/macros/navi" />
                </metal:navi>
            </div>
        </div>

        <div metal:define-macro="text-field-view" id="parent-fieldname-text" class="stx">
            <div metal:define-slot="inside" tal:replace="structure context/text/output">The body</div>
        </div>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>
