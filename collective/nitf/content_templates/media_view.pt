<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:content-core fill-slot="content-core">
    <metal:block define-macro="content-core"
          tal:define="kssClassesView context/@@kss_field_decorator_view;
                      getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                      text context/body;">
        <div id="mediabox" tal:define="here_url context/@@plone_context_state/object_url;"
                              tal:attributes="class string:larges">
            <tal:defs define="img_brains view/get_media_files;">
            <!-- overlay scrollable -->
            <div id="images" tal:condition="img_brains">
                <div class="items">
                    <tal:lines repeat="item img_brains">
                    <div>
                        <img class="imgthumb" tal:condition="python:item['media_type'] is 'image'" src="img" tal:attributes="src string:${item/image_url}/image_preview; class string:media-${item/media_type}" />
                        <div class="info">
                            <h3 tal:content="item/title|nothing">A Blue Flower</h3>
                            <p tal:content="item/description|nothing">Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur.</p>
                        </div>
                    </div>
                    </tal:lines>
                </div>
            </div>
            <!-- prev/next buttons -->
            <span class="nav prev"></span>
            <span class="nav next"></span>
            <div class="close" href="#"> &nbsp; &nbsp; &nbsp; </div>
            </tal:defs>
        </div>

    <!--div id="box" tal:replace="structure provider:collective.nitf.carousel">
    </div-->

    </metal:block>
</metal:content-core>

</body>
</html>

