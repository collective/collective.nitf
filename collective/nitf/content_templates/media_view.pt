<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.nitf">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
        tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading" tal:content="context/title" />

        <h2 class="" tal:content="context/subtitle" />

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <p class="documentDescription" tal:content="context/description" />

        <p class="">
            <span i18n:translate="">By</span>
            <span tal:content="context/byline" />
        </p>

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div class="mediaview">
            <metal:mediamacro define-macro="media-box">
            <div id="mediabox" tal:define="here_url context/@@plone_context_state/object_url;"
                               tal:attributes="class string:previews">
                <tal:defs define="img_brains view/get_images;">
                <div id="images" tal:condition="img_brains">
                    <div class="items">
                        <tal:lines repeat="item img_brains">
                        <div>
                            <span>
                                <img tal:condition="python:item['media_type'] is 'image'"
                                     class="imgthumb"
                                     src="img"
                                     tal:attributes="src string:${item/image_url}/image_preview;
                                                     class string:media-${item/media_type}" />
                                <div class="info">
                                    <h3 tal:content="item/title|nothing">A Blue Flower</h3>
                                    <p tal:content="item/description|nothing">Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur.</p>
                                </div>
                            </span>
                        </div>
                        </tal:lines>
                    </div>
                </div>
                <!-- prev/next buttons -->
                <div class="navibuttons" metal:define-slot="navi">
                    <metal:navi define-macro="navi">
                        <div class="navi prev"></div>
                        <div class="navi next"></div>
                    </metal:navi>
                </div>
                <div class="close" href="#"> &nbsp; &nbsp; &nbsp; </div>
                </tal:defs>
                <br class="visualClear" clear="all" />
            </div>
            </metal:mediamacro>
        </div>

        <br class="visualClear" clear="all" />

        <div metal:define-macro="text-field-view" id="parent-fieldname-text" class="stx">
            <div metal:define-slot="inside" tal:replace="structure context/text/output">The body</div>
        </div>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>
