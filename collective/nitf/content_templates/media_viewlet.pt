<div id="media-wrapper" class=""
     tal:attributes="class string:${viewlet/image_size}s">

    <tal:defs define="images view/get_images;
                      cols python:4;
                      lines python:viewlet.mediaRows(images, cols);">

        <div id="media-bar" tal:condition="lines">
            <span class="navi prev"></span>
            <div id="thumbs" class="thumbnails">
                <div class="items">
                    <tal:lines repeat="line lines">
                    <tal:row repeat="item line">
                    <div class="mediawrap imgwrap" tal:condition="item/media_type">
                        <span>
                            <img class="" src="" alt="" title=""
                                 tal:condition="python:item['media_type'] is 'image'"
                                 tal:attributes="src string:${item/image_url}/image_${viewlet/image_size};
                                                 class string:media-${item/media_type};
                                                 alt string:${item/title};
                                                 title string:${item/description}" />

                            <a class="" href="" style="display: block; height: 64px; width: 64px;"
                               tal:condition="python:item['media_type'] is 'video'"
                               tal:attributes="href string:${item/image_url};
                                               class string:media-${item/media_type}">
                            </a>
                        </span>
                    </div>
                    </tal:row>
                    </tal:lines>
                </div>

                <div class="visualClear"><!-- --></div>

            </div>
            <span class="navi next"></span>
        </div>
    </tal:defs>
</div>

<div class="visualClear"><!-- --></div>

<script>
    jq(function($) {
        $(".previews .thumbnails").scrollable();
        });
</script>
